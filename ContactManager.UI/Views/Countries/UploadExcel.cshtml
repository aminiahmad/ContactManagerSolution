@{
    ViewBag.Title = "UploadExcelFile";
    ViewBag.CurrentUrl = "~/Countries/UploadExcel";
}
<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span>Contacts</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Countries</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Upload</span>
        </div>
    </div>
</div>
<div class="form-container">
    <h3 class="text-large">Form Of Upload Excel File</h3>
    <form asp-action="UploadExcel" asp-controller="Countries" method="post" enctype="multipart/form-data">
        <div class="flex">
            <div class="w-25">
                <label class="form-label pt">Choose a excel file</label>
            </div>
            <div class="flex-1">
                <input class="form-input" type="file" name="excelFile"/>
                <div class="text-red">@ViewBag.ErrorMessage</div>
                <div class="text-green">@ViewBag.Message</div>
            </div>
        </div>
        <div class="flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button type="submit" class="button button-green-back">Upload</button>
            </div>
        </div>
    </form>
</div>