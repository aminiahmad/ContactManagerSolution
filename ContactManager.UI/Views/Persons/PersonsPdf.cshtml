@model IEnumerable<PersonResponse>
@{
    Layout = null;
}
<link href="@("http://"+Context.Request.Host.ToString()+"/StyleSheet.css")" rel="stylesheet"/>
@*http://localhost:portNumber/stylesheet.css*@

<h3>Persons</h3>

<table class="table w-100 mt">
    <thead>
        <tr>
            <th>PersonName</th>
            <th>Email</th>
            <th>DateOfBirth</th>
            <th>Country</th>
            <th>Age</th>
            <th>Address</th>
            <th>ReceiveNewsLetters</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PersonResponse person in Model)
        {
            <tr>
                <td style="width: 10%">@person.PersonName</td>
                <td style="width: 15%">@person.Email</td>
                <td style="width: 13%">@person.DateOfBirth?.ToString("MM/dd/yyyy")</td>
                <td style="width: 9%">@person.Country</td>
                <td style="width: 9%">@person.Age</td>
                <td style="width: 12%">@person.Address</td>
                <td style="width: 10%">@person.ReceiveNewsLetters</td>
                <td style="width: 9%">@person.Gender</td>
            </tr>
        }
    </tbody>
</table>